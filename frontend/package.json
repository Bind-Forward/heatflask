{
  "name": "heatflask",
  "version": "0.2.0",
  "homepage": "https://github.com/ebrensi/heatflask",
  "repository": {
    "type": "git",
    "url": "https://github.com/ebrensi/heatflask"
  },
  "description": "Animated Movement Data Visualization for Strava Tracks",
  "scripts": {
    "build": "parcel build ./src/html/*.html",
    "build-compact": "parcel build ./src/html/*.html --experimental-scope-hoisting",
    "watch": "parcel watch ./src/html/*.html",
    "check": "npx eslint ./src/js"
  },
  "author": "Efrem Rensi",
  "license": "ISC",
  "dependencies": {
    "@msgpack/msgpack": "^1.12.2",
    "downloadjs": "^1.4.7",
    "gif.js": "git+ssh://git@github.com/ebrensi/gif.js.git",
    "leaflet": "^1.6.0",
    "leaflet-areaselect": "git+https://github.com/ebrensi/leaflet-areaselect.git",
    "leaflet-control-window": "^1.0.0",
    "leaflet-easybutton": "^2.4.0",
    "leaflet-image": "^0.4.0",
    "leaflet-providers": "^1.10.1",
    "persistent-websocket": "^1.0.2",
    "pikaday": "^1.8.0",
    "pure-knob": "git+https://github.com/ebrensi/pure-knob.git",
    "sidebar-v2": "^0.4.0",
    "simple-datatables": "^2.1.13"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "eslint": "^7.4.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-nuke-dist": "^1.0.1"
  },
  "eslintConfig" : {
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "dot-notation": "off"
    },
    "ignorePatterns": ["dist/*", "dist_unbundled/*"]

  }

}
