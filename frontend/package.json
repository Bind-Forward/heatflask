{
  "name": "heatflask-frontend",
  "version": "0.4.0",
  "homepage": "https://github.com/ebrensi/heatflask",
  "repository": {
    "type": "git",
    "url": "https://github.com/ebrensi/heatflask"
  },
  "description": "Animated Movement Data Visualization for Strava Tracks",
  "scripts": {
    "build": "npm run documentation && npm run format; parcel build ./src/html/*.html",
    "watch": "parcel watch ./src/html/*.html",
    "check": "prettier --check ./src/",
    "format": "prettier --write ./src/",
    "documentation": "documentation build --shallow ./src/js/**.js -f html -o ../docs/"
  },
  "author": "Efrem Rensi",
  "license": "ISC",
  "dependencies": {
    "@msgpack/msgpack": "^1.12.2",
    "downloadjs": "^1.4.7",
    "gif.js": "github:ebrensi/gif.js#wasm-dev",
    "leaflet": "^1.6.0",
    "leaflet-areaselect": "github:ebrensi/leaflet-areaselect",
    "leaflet-control-window": "^1.0.0",
    "leaflet-easybutton": "^2.4.0",
    "leaflet-image": "^0.4.0",
    "leaflet-providers": "^1.10.1",
    "persistent-websocket": "^1.0.2",
    "pikaday": "^1.8.0",
    "pure-knob": "github:ebrensi/pure-knob",
    "sidebar-v2": "^0.4.0",
    "simple-datatables": "^2.1.13"
  },
  "browserslist": [
    "> 0.75%, not ie 11, not op_mini all"
  ],
  "devDependencies": {
    "documentation": "^13.0.2",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "parcel": "next",
    "parcel-plugin-nuke-dist": "^1.0.1",
    "prettier": "^2.0.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "rules": {
      "dot-notation": "off"
    },
    "ignorePatterns": [
      "dist/*",
      "dist_unbundled/*"
    ]
  }
}
