{
  "name": "heatflask-frontend",
  "version": "0.4.0",
  "homepage": "https://github.com/ebrensi/heatflask",
  "repository": {
    "type": "git",
    "url": "https://github.com/ebrensi/heatflask"
  },
  "description": "Animated Movement Data Visualization for Strava Tracks",
  "scripts": {
    "watch": "npm run asc-watch & parcel watch --log-level verbose ./src/html/*.html",
    "serve": "npm run asc-watch & parcel serve --log-level verbose ./src/html/*.html",
    "build": "npm run clean; npm run asc-build & parcel build ./src/html/*.html",
    "clean": "rm -rf ./dist/* ./.parcel-cache/* ./dev-docs/*",
    "format": "prettier --write ./src/",
    "asc-build": "asc ./src/assembly/wasm.ts --target production",
    "asc-watch": "onchange -i --verbose './src/assembly/*.ts' --  asc ./src/assembly/wasm.ts --target development"
  },
  "author": "Efrem Rensi",
  "license": "ISC",
  "dependencies": {
    "@assemblyscript/loader": "latest",
    "@babel/core": "^7.12.10",
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@msgpack/msgpack": "^2.3.0",
    "downloadjs": "^1.4.7",
    "gif.js": "github:ebrensi/gif.js#wasm-dev",
    "latlon-geohash": "^2.0.0",
    "leaflet": "^1.7.1",
    "leaflet-areaselect": "github:ebrensi/leaflet-areaselect",
    "leaflet-control-window": "^1.0.0",
    "leaflet-easybutton": "^2.4.0",
    "leaflet-image": "^0.4.0",
    "leaflet-providers": "^1.11.0",
    "pws": "^5.0.2",
    "sidebar-v2": "^0.4.0"
  },
  "browserslist": [
    "> 0.75%, not ie 11, not op_mini all"
  ],
  "devDependencies": {
    "@types/leaflet": "^1.5.21",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "assemblyscript": "latest",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^6.15.0",
    "onchange": "^7.1.0",
    "parcel": "next",
    "parcel-plugin-nuke-dist": "^1.0.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "dot-notation": "off"
    },
    "ignorePatterns": [
      "dist/*",
      "dist_unbundled/*",
      "src/ext/*"
    ]
  },
  "prettier": {
    "semi": false
  }
}
