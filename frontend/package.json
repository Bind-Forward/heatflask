{
  "name": "heatflask-frontend",
  "version": "0.4.0",
  "homepage": "https://github.com/ebrensi/heatflask",
  "repository": {
    "type": "git",
    "url": "https://github.com/ebrensi/heatflask"
  },
  "description": "Animated Movement Data Visualization for Strava Tracks",
  "scripts": {
    "build": "npm run format; parcel build ./src/html/*.html",
    "watch": "parcel watch --log-level verbose ./src/html/*.html",
    "serve": "parcel serve --log-level verbose ./src/html/*.html",
    "test": "parcel serve --log-level verbose ./test/*.html",
    "clean": "rm -rf dist/* .parcel-cache/*",
    "check": "prettier --check ./src/",
    "format": "prettier --write ./src/",
    "docs": "documentation build ./src/js/main.js -f html -o ./dev-docs/"
  },
  "author": "Efrem Rensi",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@msgpack/msgpack": "^2.2.0",
    "downloadjs": "^1.4.7",
    "gif.js": "github:ebrensi/gif.js#wasm-dev",
    "latlon-geohash": "^2.0.0",
    "leaflet": "^1.7.1",
    "leaflet-areaselect": "github:ebrensi/leaflet-areaselect",
    "leaflet-control-window": "^1.0.0",
    "leaflet-easybutton": "^2.4.0",
    "leaflet-image": "^0.4.0",
    "leaflet-providers": "^1.10.2",
    "pws": "^5.0.2",
    "sidebar-v2": "^0.4.0",
    "simple-datatables": "^2.1.13"
  },
  "browserslist": [
    "> 0.75%, not ie 11, not op_mini all"
  ],
  "devDependencies": {
    "documentation": "^13.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "parcel": "next",
    "parcel-plugin-nuke-dist": "^1.0.1",
    "prettier": "^2.1.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "rules": {
      "dot-notation": "off"
    },
    "ignorePatterns": [
      "dist/*",
      "dist_unbundled/*"
    ]
  },
  "prettier": {
    "semi": false
  }
}
