{
  "options": {
    "enable": ["bulk-memory", "simd"],
    "memoryBase": 1024,
    "sourceMap": true
  },

  "targets": {
    "development": {
      "binaryFile": "dist/dev.wasm",
      "textFile": "dist/dev.wat",
      "debug": true
    },
    "production": {
      "binaryFile": "dist/prod.wasm",
      "textFile": "dist/prod.wat",
      "optimizeLevel": 3,
      "shrinkLevel": 1,
      "converge": false,
      "noAssert": false
    }
  }
}
